<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logic Quiz</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #eef2ff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    #quiz-box {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      text-align: center;
      width: 450px;
    }

    h1 {
      color: #4f46e5;
    }

    .choice {
      background: #4f46e5;
      color: white;
      padding: 10px;
      margin: 10px 0;
      border-radius: 10px;
      cursor: pointer;
      transition: opacity 0.2s;
    }

    .choice:hover {
      opacity: 0.85;
    }

    #feedback {
      margin-top: 15px;
      font-weight: bold;
    }
  </style>
</head>
<body>

<div id="quiz-box">
  <h1>Logic Quiz</h1>
  <h2 id="question">Loading question...</h2>
  <div id="choices"></div>
  <div id="feedback"></div>
</div>

<script>
  // Quiz questions
  const questions = [
    {
      q: "Five people were eating apples. A finished before B but behind C. D finished before E but behind B. What was the finishing order?",
      options: [
        "C, A, B, D, E",
        "A, C, B, D, E",
        "C, B, A, E, D"
      ],
      correct: 0
    },
    {
      q: "A girl wears socks of different colors to school every day and never repeats a color. One day her teacher asks her to wear a previously used pair for a photo. How many pairs of socks has she worn this week?",
      options: [
        "4 pairs",
        "7 pairs",
        "9 pairs"
      ],
      correct: 0
    },
    {
      q: "There are two ducks in front of a duck, two ducks behind a duck, and a duck in the middle. How many ducks are there?",
      options: [
        "5",
        "4",
        "3"
      ],
      correct: 2
    }
  ];

  let currentIndex = 0;

  function loadQuestion() {
    if (currentIndex >= questions.length) {
      document.getElementById("question").innerText = "Quiz Completed!";
      document.getElementById("choices").innerHTML = "";
      document.getElementById("feedback").innerText = "Congratulations, you answered all questions!";
      return;
    }

    const q = questions[currentIndex];
    document.getElementById("question").innerText = q.q;

    let html = "";
    q.options.forEach((choice, i) => {
      html += `<div class="choice" onclick="checkAnswer(${i})">${choice}</div>`;
    });
    document.getElementById("choices").innerHTML = html;
    document.getElementById("feedback").innerText = "";
  }

  function checkAnswer(selected) {
    const feedback = document.getElementById("feedback");
    const q = questions[currentIndex];
    if (selected === q.correct) {
      feedback.style.color = "green";
      feedback.innerText = "Correct! âœ…";
      currentIndex++;
      setTimeout(loadQuestion, 1000); // Move to next question after 1 second
    } else {
      feedback.style.color = "red";
      feedback.innerText = "Wrong! Try again.";
    }
  }

  loadQuestion();
</script>

</body>
</html>
